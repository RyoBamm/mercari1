  <li>
    <%= link_to purchase_item_path(@purchase_items), class: "mypage-item-link" do %>
      <figure>
        <% purchase_item.images.first(1).each do |image| %>
         <%= image_tag image.image, class: "is-higher-height lazyloaded" %>
        <% end %>
      </figure>
      <div class="mypage-item-body">
        <div class="mypage-item-text">
          <%= purchase_item.name %>
        </div>
      </div>
      <i class="icon-arrow-right"></i>
    <% end %>
  </li>
